	<name>Spring Cloud GCP Dependencies</name>
	<description>Spring Cloud GCP Dependencies</description>
	<packaging>pom</packaging>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://google.oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ossrh</id>
			<url>https://google.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>

	<properties>
		<gcp-libraries-bom.version>26.1.4</gcp-libraries-bom.version>
		<cloud-sql-socket-factory.version>1.7.2</cloud-sql-socket-factory.version>
		<guava.version>31.1-jre</guava.version>
